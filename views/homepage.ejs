<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body class="homepageBody">
    <h1 class="homepageHeader">Homepage</h1>
    <div class="messagesDiv">
        <% messages.forEach(msg => { %>
            <div class="userMessage" id="message-<%= msg.id %>">
                <img src="/profile.png" class="messageProfileImg">
                <div class="messageInformationDiv">
                    <% if (user && (user.membership === "Premium" || user.membership === "Admin")) { %>
                        <h1 class="messageUserName"><%= msg.first_name %></h1>
                        <h1 class="messageTime"><%= msg.created_at.toLocaleString() %></h1>
                    <% } %>
                    <h1 class="messageText"><%= msg.message %> </h1>
                
                    <% if (user && user.membership === "Admin") { %>
                        <form action="/delete-message/<%= msg.id %>" method="POST">
                            <button type="submit" class="removeMsgBtn">Remove</button>
                        </form>
                    <% } %>
                </div>
            </div>
        <% }) %>
    </div>
    <button class="logOutButton"><a href="/account" style="text-decoration: none;">Account</a></button>
    
</body>
</html>